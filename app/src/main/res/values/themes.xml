<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IdentificacaoInsetos" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item> <!-- Status bar -->
        <item name="colorPrimaryVariant">@color/green_500</item> <!-- Toolbar -->
        <item name="colorOnPrimary">@color/white</item> <!--  -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_300</item> <!-- Background Button-->
        <item name="colorSecondaryVariant">@color/dark_red</item> <!-- Ripple -->
        <item name="colorOnSecondary">@color/white</item> <!-- Symbol Button -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- -->
        <!-- Customize your theme here. -->
    </style>

    <style name="TEXT_COLOR">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.IdentificacaoInsetos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.IdentificacaoInsetos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IdentificacaoInsetos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>